{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vulcaart.art/schemas/exhibition-data.schema.json",
  "title": "Exhibition Data",
  "description": "Schema for artworks, personas, and critiques data",
  "type": "object",
  "required": ["artworks", "personas", "critiques"],
  "properties": {
    "artworks": {
      "type": "array",
      "minItems": 1,
      "description": "Array of artwork objects",
      "items": {
        "type": "object",
        "required": ["id", "titleZh", "titleEn", "year", "artist"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique artwork identifier",
            "examples": ["artwork-1"]
          },
          "titleZh": {
            "type": "string",
            "description": "Chinese title",
            "examples": ["记忆（绘画操作单元：第二代）"]
          },
          "titleEn": {
            "type": "string",
            "description": "English title",
            "examples": ["Memory (Painting Operation Unit: Second Generation)"]
          },
          "year": {
            "type": "integer",
            "minimum": 1900,
            "description": "Creation year",
            "examples": [2022]
          },
          "artist": {
            "type": "string",
            "description": "Artist name",
            "examples": ["Sougwen Chung"]
          },
          "images": {
            "type": "array",
            "description": "Array of image objects for carousel",
            "items": {
              "type": "object",
              "required": ["id", "url"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Image identifier",
                  "examples": ["img-1-1"]
                },
                "titleZh": {
                  "type": "string",
                  "description": "Chinese image title",
                  "examples": ["初步概念草图"]
                },
                "titleEn": {
                  "type": "string",
                  "description": "English image title",
                  "examples": ["Initial Concept Sketch"]
                },
                "url": {
                  "type": "string",
                  "description": "Image URL (relative or absolute)",
                  "examples": ["./assets/artwork-1-img-1.jpg"]
                },
                "category": {
                  "type": "string",
                  "enum": ["sketch", "process", "installation", "detail", "final", "context"],
                  "description": "Image category"
                },
                "sequence": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Display order sequence"
                },
                "caption": {
                  "type": "string",
                  "description": "Image caption/description"
                },
                "metadata": {
                  "type": "object",
                  "description": "Additional image metadata"
                }
              }
            }
          },
          "primaryImageId": {
            "type": "string",
            "description": "ID of the primary/featured image",
            "examples": ["img-1-5"]
          },
          "imageUrl": {
            "type": "string",
            "description": "Legacy single image URL (backward compatibility)",
            "examples": ["/assets/artwork-1.jpg"]
          },
          "context": {
            "type": "string",
            "description": "Artwork context/background information"
          }
        }
      }
    },
    "personas": {
      "type": "array",
      "minItems": 1,
      "description": "Array of persona/critic objects",
      "items": {
        "type": "object",
        "required": ["id", "nameZh", "nameEn", "period", "bio", "color"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique persona identifier",
            "examples": ["su-shi"]
          },
          "nameZh": {
            "type": "string",
            "description": "Chinese name",
            "examples": ["苏轼"]
          },
          "nameEn": {
            "type": "string",
            "description": "English name",
            "examples": ["Su Shi"]
          },
          "period": {
            "type": "string",
            "description": "Historical period",
            "examples": ["北宋文人 (1037-1101)"]
          },
          "bio": {
            "type": "string",
            "description": "Biography text"
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]{6}$",
            "description": "Persona theme color (hex)",
            "examples": ["#B85C3C"]
          },
          "rpait": {
            "type": "object",
            "description": "RPAIT dimension scores (averaged from critiques)",
            "properties": {
              "R": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Representation score"
              },
              "P": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Philosophicality score"
              },
              "A": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Aesthetics score"
              },
              "I": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Interpretability score"
              },
              "T": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Technicality score"
              }
            }
          }
        }
      }
    },
    "critiques": {
      "type": "array",
      "minItems": 1,
      "description": "Array of critique objects",
      "items": {
        "type": "object",
        "required": ["artworkId", "personaId", "textZh", "textEn"],
        "properties": {
          "artworkId": {
            "type": "string",
            "description": "Reference to artwork ID",
            "examples": ["artwork-1"]
          },
          "personaId": {
            "type": "string",
            "description": "Reference to persona ID",
            "examples": ["su-shi"]
          },
          "textZh": {
            "type": "string",
            "description": "Chinese critique text"
          },
          "textEn": {
            "type": "string",
            "description": "English critique text"
          },
          "rpait": {
            "type": "object",
            "description": "RPAIT dimension scores for this critique",
            "properties": {
              "R": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              },
              "P": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              },
              "A": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              },
              "I": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              },
              "T": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              }
            }
          }
        }
      }
    }
  }
}
